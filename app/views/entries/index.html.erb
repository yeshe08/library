<p id="notice"><%= notice %></p>
    <%if current_user.present?%>
    <%if current_user.role_id == 1%>
<%= link_to 'Export',  entries_entry_export_path, :class=>"btn btn-primary"%>
  <%end%>
  <%end%>

<h1>Entries</h1>

<table id="entry" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Student</th>
      <th>Issue date</th>
      <th>Return date</th>
      <th>Book</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%=  entry.user.name %></td>
        <td><%= entry.issue_date %></td>
        <td><%= entry.return_date %></td>
        <td><%= entry.bookid.present? ? entry.bookid.book_detail.book_name : ""%></td>
        <td>
          <%= link_to 'Show', entry %>
          <%= link_to 'Edit', edit_entry_path(entry) %>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
